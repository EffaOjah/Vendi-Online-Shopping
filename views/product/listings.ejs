    <!-- BACK TO TOP BUTTON -->
    <button class="back-to-top" id="backToTop" title="Back to Top">
      <i class="fas fa-arrow-up"></i>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Wishlist functionality (delegated for dynamic content)
      document.addEventListener("click", function (e) {
        if (e.target.closest(".wishlist-btn")) {
          const btn = e.target.closest(".wishlist-btn");
          const icon = btn.querySelector("i");
          if (icon.classList.contains("far")) {
            icon.classList.remove("far");
            icon.classList.add("fas");
          } else {
            icon.classList.remove("fas");
            icon.classList.add("far");
          }
        }
      });

      // Back to Top Button
      const backToTopBtn = document.getElementById("backToTop");

      window.addEventListener("scroll", () => {
        if (window.scrollY > 300) {
          backToTopBtn.classList.add("active");
        } else {
          backToTopBtn.classList.remove("active");
        }
      });

      backToTopBtn.addEventListener("click", () => {
        window.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      });

      // Infinite Scroll Logic
      const listingsContainer = document.querySelector(".row.g-4");
      const loadingSpinner = document.getElementById("loading-spinner");
      const endOfResults = document.getElementById("end-of-results");

      // Placeholder data to simulate fetching new listings
      const placeholderData = [
        {
          title: "Fresh Tomatoes (Basket)",
          price: "₦15,000",
          desc: "Premium quality, farm-fresh tomatoes harvested today. Bulk orders available.",
          location: "Ogun",
          time: "2h ago",
          img: "https://images.unsplash.com/photo-1595246140625-573b715d11d3?q=80&w=400",
          cat: "Agriculture",
        },
        {
          title: "2 Bed Apartment",
          price: "₦2,500,000/yr",
          desc: "Modern 2-bedroom apartment in a secure estate. Serviced with 24/7 power.",
          location: "Lekki",
          time: "1d ago",
          img: "https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?q=80&w=400",
          cat: "Real Estate",
        },
        {
          title: "iPhone 15 Pro Max",
          price: "₦1,250,000",
          desc: "Titanium Blue, 256GB storage. Brand new with warranty.",
          location: "Ikeja",
          time: "2d ago",
          img: "https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?w=400",
          cat: "Electronics",
        },
        {
          title: "Nike Air Max 270",
          price: "₦45,000",
          desc: "Original Nike sneakers. Size 42. Available in multiple colors.",
          location: "Abuja",
          time: "4h ago",
          img: "https://images.unsplash.com/photo-1542291026-7eec264c27ff?q=80&w=400",
          cat: "Fashion",
        },
      ];

      let isLoading = false;

      const loadMoreListings = () => {
        if (isLoading) return;
        isLoading = true;
        loadingSpinner.classList.remove("d-none"); // Show spinner

        // Simulate network delay
        setTimeout(() => {
          // Append 4 new items
          placeholderData.forEach((item) => {
            const newItem = document.createElement("div");
            newItem.className = "col-6 col-md-6 col-lg-3";
            newItem.innerHTML = `
                <a href="/product/listing-detail" class="text-decoration-none h-100">
                  <div class="listing-card">
                    <div class="listing-image-wrapper">
                      <img
                        src="${item.img}"
                        alt="${item.cat}"
                        class="listing-image"
                      />
                      <span class="badge-verified">
                        <i class="fas fa-user-check"></i> Verified ID
                      </span>
                    </div>
                    <div class="listing-content">
                      <div class="listing-price">${item.price}</div>
                      <h3 class="listing-title">${item.title}</h3>
                      <div class="listing-location">
                        <i class="fas fa-map-marker-alt"></i> ${item.location}
                      </div>
                      <div class="listing-tags">
                        <span class="listing-tag">${item.cat}</span>
                         <span class="listing-tag">Verified</span>
                      </div>
                    </div>
                  </div>
                </a>
              `;
            listingsContainer.appendChild(newItem);
          });

          isLoading = false;
          loadingSpinner.classList.add("d-none"); // Hide spinner
        }, 1500); // 1.5s delay
      };

      const observer = new IntersectionObserver(
        (entries) => {
          if (entries[0].isIntersecting) {
            loadMoreListings();
          }
        },
        { rootMargin: "100px" }
      );

      observer.observe(endOfResults);
    </script>
  </body>
